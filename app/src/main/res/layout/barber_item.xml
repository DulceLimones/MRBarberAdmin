<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/barberItem">

    <ImageView
        android:id="@+id/staff_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_icon"
        />
    <TextView
        android:id="@+id/label_barber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignTop="@id/staff_image"
        android:layout_alignBottom="@id/staff_image"
        android:layout_toEndOf="@id/staff_image"
        android:gravity="center_vertical"
        android:text="barber name"
        android:textSize="16dp"
        android:textColor="@color/black" />



</RelativeLayout>